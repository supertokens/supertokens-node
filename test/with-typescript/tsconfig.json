{
    "compilerOptions": {
        "target": "ES2016",
        "strictNullChecks": true,
        "declaration": true,
        "module": "commonJS",
        "outDir": "build",
        "moduleResolution": "Node",
        "noImplicitAny": true,
        "sourceMap": true,
        "noImplicitThis": true,
        "skipLibCheck": true,
        "strict": true,
        "lib": ["ES2017"]
    },
    "include": ["*.ts"],
    "compileOnSave": true
}
