{
    "compilerOptions": {
        "target": "ES2016",
        "strictNullChecks": true,
        "declaration": true,
        "module": "commonJS",
        "moduleResolution": "Node",
        "sourceMap": true,
        "skipLibCheck": true,
        "noFallthroughCasesInSwitch": true,
        "lib": ["ES2017", "DOM"], // "DOM" is required for Request and Response types
        "noEmit": true
    },
    "include": ["./**/*"],
    "exclude": ["build"],
    "compileOnSave": true
}
