{
    "compilerOptions": {
        "target": "ES2016",
        "strictNullChecks": true,
        "declaration": true,
        "module": "commonJS",
        "outDir": "build",
        "moduleResolution": "Node",
        "noImplicitAny": true,
        "sourceMap": true,
        "noImplicitThis": true,
        "skipLibCheck": true,
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "lib": [
            "ES2017"
        ]
    },
    "include": [
        "ts/**/*"
    ],
    "exclude": [
        "build"
    ],
    "compileOnSave": true
}